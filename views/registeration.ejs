        crossorigin="anonymous"></script>
    <style>
        .a {
            position: relative;
            left: -130px;
        }

        .b {
            position: relative;
            left: -80px;
        }
    </style>
</head>

<body style="background-color: cadetblue;">
    <section class="login py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5 bg-dark">
                    <img src="https://th.bing.com/th/id/OIP.EEkDBlNw9eJ4KZtt0m4MwAHaKF?w=140&h=191&c=7&r=0&o=5&pid=1.7"
                        class="img-fluid rounded w-100 h-100" alt="">
                </div>
                <div class="col-md-5 bg-white text-center">
                    <img src="https://th.bing.com/th?id=OIP.XVXfaLV9R4-IXe5D-vuaXgHaH5&w=241&h=258&c=8&rs=1&qlt=90&o=6&pid=3.1&rm=2"
                        alt="" class="mx-auto d-block" style="width: 25%; height: 25%; padding-top: 20px;" class="mt-5">
                    <h2>Register Here</h2>
                    <% if(msg.length> 0){ %>
                        <div class="alert alert-danger">
                            <%= msg %>
                        </div>
                                 <% } %>
                            <form action="/user_insert" class="shadow-4 p-4 mt-3" method="post" enctype="multipart/form-data">
                                <div class="form-group p-1">
                                    <div class="">
                                        <input type="text" placeholder="Name" class="form-control" name="n">
                                    </div>
                                </div>

                                <div class="form-group p-2">
                                    <div class="">
                                        <input type="text" placeholder="Email" class="form-control" name="e">
                                    </div>
                                </div>

                                <div class="form-group p-2">
                                    <div class="">
                                        <input type="password" placeholder="Password" class="form-control" name="p">
                                    </div>
                                </div>

                                <div class="form-group p-2">
                                    <div class="">
                                        <input type="password" placeholder="Confirm Password" class="form-control"
                                            name="cp">
                                    </div>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="">
                                    <label class="form-check-label a">
                                        show password
                                    </label>
                                </div>
                                <div class="row form-group" style="margin-right: 5px;">
                                    <span class="b">Profile Picture</span>
                                    <input type="file" name="image" id=""required>
                                    <div class="col-md-3">
                                    </div>
                                    <div class="form-group">

                                        <div class="small text-muted mt-2">
                                        </div>

                                    </div>
                                    <div class="form-group p-2">
                                        <div class="">
                                            <button class="form-control bg-primary">Register</button>
                                        </div>
                                    </div>
                                    <h6 style="text-align: center;">HAVE AN ACCOUNT? <a href="/login">LOGIN NOW</a>
                                    </h6>
                                </div>
                            </form>

                </div>


                <div class="col-md-1"></div>

            </div>
        </div>

    </section>

</body>

</html>