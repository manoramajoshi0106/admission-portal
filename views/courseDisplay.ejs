        <h1 class="text-center">Course display</h1>

    <div class="container">

        <table class="table table-bordered">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Course</th>
                <th>Phone</th>
                <th>status</th>
                <th>Comment</th>
                <th>Action</th>
            </tr>
            <% d.forEach((item) =>{ %>
                <!-- console.log(item) -->
                <tr>
                    <td><%= item._id %></td>
                    <td><%= item.name %></td>
                    <td><%= item.email %></td>
                    <td><%= item.course %></td>
                    <td><%= item.phone %></td>
                    <td><%= item.status %></td>
                    <td><%= item.comment %></td>
                    <td>
                        <a href="/courseview/<%= item._id %>" class="btn btn-primary">view</a>
                        <a href="/courseedit/<%= item._id %>" class="btn btn-info">edit</a>
                        <a href="/course_delete/<%= item._id %>" class="btn btn-danger">delete</a>
                    </td>
                </tr>
           <% })%>
            
        </table>
    </div>

