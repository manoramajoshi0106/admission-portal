  <!-- profile model -->
  <div class="modal fade" id="update" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Btech</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/update_profile" method="post" enctype="multipart/form-data">
            <div class="mb-3">
              <label>Name:</label>
              <input type="text" name="name" class="form-control" value="<%= n %>">
            </div>
            <div class="mb-3">
              <label>Email:</label>
              <input type="email" name="email" class="form-control" value="<%= e %>" readonly>
            </div>
            <div class="mb-3">
              <label>Add a Phone no:</label>
              <input type="number" name="phone" class="form-control" value="<%= p %>">
            </div>
            <div>
              <label>Update image</label>
              <input type="file" name="image" class="form-control" required>
              <img src="<%= img.url %>" width="50px">
            </div>
            <button class="btn btn-info" type="submit">Submit</button>
                     
          </form>
        </div>
      </div>
    </div>
  </div>










