  <!-- change pass Model -->
  <div class="modal fade" id="btech" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Btech</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/update_password" method="post">
            <div class="mb-3">
              <label>Current Password:</label>
              <input type="password" name="currentpass" class="form-control">
            </div>
            <div class="mb-3">
              <label>New Password:</label>
              <input type="password" name="npass" class="form-control">
            </div>
            <div class="mb-3">
              <label>Confirm New Password:</label>
              <input type="password" name="cpass" class="form-control">
            </div>
            <button class="btn btn-info" type="submit">Submit</button>
                     
          </form>
        </div>
      </div>
    </div>
